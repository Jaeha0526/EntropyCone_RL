{
    "experiment": {
        "name": "n3 MMI Finding: Ray 7, Fixed step=0.1, dS=0.02, max1 (for paper)",
        "description": "Start from SA cone Ray 7 [1,1,0,1,0,0,1] with fixed step size 0.1, dS=0.02, 30 samples, max1",
        "ray_source": "custom",
        "custom_ray": [0.25, 0.25, 0.0, 0.25, 0.0, 0.0, 0.25],
        "n_parties": 3,
        "velocity": 0.001,
        "distance_mode": "fixed",
        "step_size": 0.1,
        "precise_mode": true,
        "precise_mode_runs": 10,
        "moves": 15,
        "momentum": 0.3,
        "output_dir": "results/n3_mmi_finding/ray7_trajectory",
        "seed": 42,
        "movement_mode": "safe_direction",
        "safe_direction": {
            "known_facets_file": "data/n3/ray8_known_facets.txt",
            "saturation_tolerance": 0.0001,
            "safety_factor": 0.9,
            "verbose": true,
            "use_escape_mode": true,
            "min_increase_rate": 0.05,
            "buffer_factor": 1.5,
            "escape_threshold_factor": 1.5
        }
    },
    "training": {
        "NN": 5,
        "batch_size": 60,
        "lr": 0.0001,
        "max_training_cycles": 2000,
        "hidden_dim": 64,
        "num_layers": 2,
        "rollout_length": 50,
        "dt": 0.1,
        "epsilon": 0.1,
        "factor": 0.7,
        "keep_best_n": 10,
        "exploration_noise": 0.15,
        "normalize_weights": true,
        "enable_early_stopping": true,
        "early_stop_patience": 5,
        "dS": 0.02,
        "gradient_method": "rl_v2",
        "n_gradient_samples": 30,
        "gradient_cold_start": true,
        "gradient_distance_mode": "uniform_half",
        "gradient_n_repeats": 1,
        "gradient_n_gpus": 1,
        "precision": "float64"
    },
    "environment": {
        "device": "cuda",
        "seed": 42
    }
}
